{{#films}}
<div>
  <h4>{{director}}</h4>
  <p>{{title}} - {{year}}</p>
  <p>{{link}}</p>
  <a href="/films/edit/{{id}}">Edit</a>
  <form method="POST" action="/films/{{id}}?_method=DELETE">
    <input type="submit" value="Delete">
    <input type="hidden" name="_method" value="DELETE">
  </form>
</div>
{{/films}}